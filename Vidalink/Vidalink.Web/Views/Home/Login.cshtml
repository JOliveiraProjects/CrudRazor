@model Vidalink.Data.UserProfile
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang='en' class=''>
<head>
    <meta charset='UTF-8'>
    <meta name="robots" content="noindex">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <input type="text" id="txtUser" placeholder="Usuário" name="UserName" value="" maxlength="50">
        <input type="password" id="txtPassword" placeholder="******" name="Password" maxlength="80">
        <button>login</button>

        <p class="message">@ViewBag.Message</p>

}
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>